<!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Restaurant Admin List</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/admin/dashboard">Home</a></li>
              <li class="breadcrumb-item active">Restaurant Admin List</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    {{#if message}}
        <div class="alert alert-success">
            {{message}}
        </div>
    {{/if}}

    {{#if errorMessage}}
        <div class="alert alert-danger">
            {{errorMessage}}
        </div>
    {{/if}}

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <a href="/admin/restaurant/addAdmin"  class="btn btn-primary pull-right">Add restaurant admin</a>
                            <div class="clearfix"></div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="restaurantAdminTable" class="table table-bordered table-hover">
                            <thead>
                            <tr>
                                <th>Restaurant Name</th>
                                <th>Manager First Name</th>
                                <th>Manager Last Name</th>
                                <th>Manager Email</th>
                                <th>Manager Phone Number</th>
                                <th>Action</th>
                            </tr>
                            </thead>
                            <tbody>
                                {{#each list}}
                                    <tr>
                                        <td>{{this.restaurantName}}</td>
                                        <td>{{this.managerName.firstName}}</td>
                                        <td>{{this.managerName.lastName}}</td>
                                        <td>{{this.managerName.email}}</td>
                                        <td>{{this.managerName.phone}}</td>
                                        <td>
                                            {{!-- <a class="btn btn-primary tbl-common-btn" href="/admin/restaurant/edit/{{this._id}}">Edit</a> --}}

                                            <a href='/admin/restaurant/deleteAdmin/{{this.managerName._id}}' class="btn btn-danger tbl-common-btn approve-req" >Delete</a>
                                        </td>
                                    </tr>
                                {{/each}}
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Restaurant Name</th>
                                    <th>Manager First Name</th>
                                    <th>Manager Last Name</th>
                                    <th>Manager Email</th>
                                    <th>Manager Phone Number</th>
                                    <th>Action</th>
                                </tr>
                            </tfoot>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
            </div>
        </div>
    </section>

{{#content "admin_dashboard_script" mode="append"}}
<script src="/plugins/datatables/jquery.dataTables.min.js"></script>
<script src="/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
<script src="/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
<script>
    $(function () {
        $('#restaurantAdminTable').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": false,
            "ordering": false,
            "info": true,
            "autoWidth": false,
            "responsive": true,
        });
    });
</script>
{{/content}}