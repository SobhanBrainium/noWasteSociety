

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
    <div class="row mb-2">
        <div class="col-sm-6">
        <h1>Restaurant Form</h1>
        </div>
        <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
            <li class="breadcrumb-item"><a href="/restaurant">Restaurant List</a></li>
            <li class="breadcrumb-item active">Add Restaurant Form</li>
        </ol>
        </div>
    </div>
    </div><!-- /.container-fluid -->
</section>

{{#if message}}
    <div class="alert alert-success">
        {{message}}
    </div>
{{/if}}

{{#if errorMessage}}
    <div class="alert alert-danger">
        {{errorMessage}}
    </div>
{{/if}}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-6">
            <!-- general form elements -->
            <div class="card card-primary">
                <div class="card-header">
                <h3 class="card-title">Add Restaurant Admin</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form role="form" id="restaurantAdminAdd" action="/restaurant/addAdmin" method="POST">
                    <input type="hidden" name="_csrf" value="{{csrfToken}}">
                    <div class="card-body">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Restaurant Name</label>
                            <input type="text" id="restaurantName" name="restaurantName" class="form-control"  placeholder="Enter Restaurant Name" required>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Manager First Name</label>
                            <input type="text" id="managerFirstName" name="managerFirstName" class="form-control"  placeholder="Enter Restaurant Manager First Name" required>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Manager Last Name</label>
                            <input type="text" id="managerLastName" name="managerLastName" class="form-control"  placeholder="Enter Restaurant Manager Last Name" required>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Manager Email</label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="Enter Manager Email" required>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Manager Phone Number</label>
                            <input type="number" class="form-control" id="mobileNumber" name="mobileNumber" placeholder="Enter mobile number" required>
                        </div>
                    </div>
                    <!-- /.card-body -->

                    <div class="card-footer">
                        <button type="submit" id="restaurantAdminAddFormSubmit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>

            </div>
        </div>
    </div>
</section>

{{#content "admin_dashboard_script" mode="append"}}

<script type="text/javascript">
    jQuery(document).ready(function(){
        $(".alert").fadeTo(2000, 500).slideUp(500, function(){
            $(".alert").slideUp(500);
        });

        $("#restaurantAdminAddFormSubmit").on('click', function () {
            let valid = $("#restaurantAdminAdd").valid();
            if(valid){
                $("#restaurantAdminAdd").submit();
            }
        });

        $("#restaurantAdminAdd").validate({
            rules:{
                restaurantName:{
                    required: true
                },
                managerFirstName:{
                    required: true
                },
                managerLastName : {
                    required: true
                },
                email:{
                    required: true
                },
                mobileNumber:{
                    required: true
                }
            },
            messages:{
                restaurantName:{
                    required: "<font color='red'>Please enter restaurant name.</font>"
                },
                managerFirstName:{
                    required: "<font color='red'>Please enter manager first name.</font>"
                },
                 managerLastName : {
                    required: "<font color='red'>Please enter manager last name.</font>"
                },
                email:{
                    required: "<font color='red'>Please enter email.</font>"
                },
                mobileNumber:{
                    required: "<font color='red'>Please enter mobile number.</font>"
                }
            }
        });
    })
</script>

{{/content}}


