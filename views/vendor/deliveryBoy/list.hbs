<!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Delivery Boy List</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/vendor/dashboard">Home</a></li>
              <li class="breadcrumb-item active">Delivery Boy List</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    {{#if message}}
        <div class="alert alert-success">
            {{message}}
        </div>
    {{/if}}

    {{#if errorMessage}}
        <div class="alert alert-danger">
            {{errorMessage}}
        </div>
    {{/if}}

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="vendorRestaurantDeliveryBoysList" class="table table-bordered table-hover">
                            <thead>
                            <tr>
                                <th>Restaurant Name</th>
                                <th>Restaurant Phone</th>
                                <th>Delivery Boy Name</th>
                                <th>Delivery Boy Phone</th>
                            </tr>
                            </thead>
                            <tbody>
                                {{#each restaurantDeliveryBoys}}
                                    <tr>
                                        <td>{{this.restaurantId.restaurantName}}</td>
                                        <td>{{this.restaurantId.contactPhone}}</td>
                                        <td>{{this.deliveryBoyId.firstName}} {{this.deliveryBoyId.lastName}}</td>
                                        <td>{{this.deliveryBoyId.phone}}</td>
                                        {{!-- <td>
                                            <a class="btn btn-primary tbl-common-btn" href="/vendor/restaurant/item/edit/{{this._id}}">Edit</a>

                                            <a href='/vendor/restaurant/item/delete/{{this._id}}' class="btn btn-danger tbl-common-btn approve-req" >Delete</a>
                                        </td> --}}
                                    </tr>
                                {{/each}}
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Restaurant Name</th>
                                    <th>Restaurant Phone</th>
                                    <th>Delivery Boy Name</th>
                                    <th>Delivery Boy Phone</th>
                                </tr>
                            </tfoot>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
            </div>
        </div>
    </section>

{{#content "admin_dashboard_script" mode="append"}}
<script src="/plugins/datatables/jquery.dataTables.min.js"></script>
<script src="/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
<script src="/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
<script>

    $(function () {
        $('#vendorRestaurantDeliveryBoysList').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": false,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "responsive": true,
        });
    });
</script>
{{/content}}