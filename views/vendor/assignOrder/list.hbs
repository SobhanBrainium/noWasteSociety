<!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Assign Order List</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/vendor/dashboard">Home</a></li>
              <li class="breadcrumb-item active">Assign Order List</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    {{#if message}}
        <div class="alert alert-success">
            {{message}}
        </div>
    {{/if}}

    {{#if errorMessage}}
        <div class="alert alert-danger">
            {{errorMessage}}
        </div>
    {{/if}}

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <a href="/vendor/restaurant/assignOrder/assignToDeliveryBoy/add"  class="btn btn-primary pull-right">Assign Order to Delivery Boy</a>
                            <div class="clearfix"></div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="assignedOrderListTable" class="table table-bordered table-hover">
                            <thead>
                            <tr>
                                <th>Order No</th>
                                <th>Restaurant Name</th>
                                <th>Customer Name</th>
                                <th>Assigned Delivery Boy Name</th>
                                <th>Order Status</th>
                                {{!-- <th>Action</th> --}}
                            </tr>
                            </thead>
                            <tbody>
                                {{#each list}}
                                    <tr>
                                        <td><a href="/vendor/restaurant/order/detail/{{this.orderId._id}}">{{this.orderId.orderNo}}</a></td>
                                        <td>{{this.vendorId.restaurantName}}</td>
                                        <td>{{this.customerId.firstName}} {{this.customerId.lastName}}</td>
                                        <td>{{this.deliveryBoyId.firstName}} {{this.deliveryBoyId.lastName}}</td>
                                        <td>
                                            {{#if_eq this.deliveryStatus 1}} 
                                                Pending 
                                            {{/if_eq}}

                                            {{#if_eq this.deliveryStatus 3}} 
                                                Delivered 
                                            {{/if_eq}}
                                        </td>
                                        {{!-- <td>
                                            <a class="btn btn-primary tbl-common-btn" href="/vendor/restaurant/order/detail/{{this._id}}">Order Detail</a>

                                            <a class="btn btn-danger tbl-common-btn" href="/vendor/restaurant/order/delete/{{this._id}}">Delete</a>
                                        </td> --}}
                                    </tr>
                                {{/each}}
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Order No</th>
                                    <th>Restaurant Name</th>
                                    <th>Customer Name</th>
                                    <th>Assigned Delivery Boy Name</th>
                                    <th>Order Status</th>
                                    {{!-- <th>Action</th> --}}
                                </tr>
                            </tfoot>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
            </div>
        </div>
    </section>

{{#content "admin_dashboard_script" mode="append"}}
<script src="/plugins/datatables/jquery.dataTables.min.js"></script>
<script src="/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
<script src="/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
<script>

    $(function () {
        $('#assignedOrderListTable').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": false,
            "ordering": false,
            "info": true,
            "autoWidth": false,
            "responsive": true,
        });
    });
</script>
{{/content}}